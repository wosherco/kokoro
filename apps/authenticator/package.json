{
  "name": "@kokoro/authenticator",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "PUBLIC_ENVIRONMENT=development vite dev --host",
    "dev:env": "infisical run --env dev -- pnpm dev",
    "dev:dotenv": "dotenv -e ../../.env -- pnpm dev",
    "start": "node build",
    "start:env": "infisical run --env prod -- node build",
    "sync": "CI=1 svelte-kit sync",
    "prebuild": "pnpm -F envs ensure-env && pnpm sync",
    "build": "vite build",
    "build:env": "infisical run --env dev -- vite build",
    "preview": "infisical run --env dev -- vite preview",
    "pretypecheck": "pnpm prebuild",
    "typecheck": "CI=1 pnpm sync && svelte-check --tsconfig ./tsconfig.json",
    "typecheck:watch": "CI=1 pnpm sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "add-ui": "bunx shadcn-svelte@next add"
  },
  "devDependencies": {
    "@kokoro/auth": "workspace:*",
    "@kokoro/api": "workspace:*",
    "@kokoro/jwt": "workspace:*",
    "@kokoro/db": "workspace:*",
    "@kokoro/biome-config": "workspace:*",
    "@kokoro/consts": "workspace:*",
    "@kokoro/tsconfig": "workspace:*",
    "@sveltejs/adapter-node": "catalog:",
    "@sveltejs/kit": "catalog:",
    "@sveltejs/vite-plugin-svelte": "catalog:",
    "@types/js-cookie": "^3.0.6",
    "autoprefixer": "^10.4.20",
    "bits-ui": "catalog:",
    "clsx": "^2.1.1",
    "dotenv-cli": "catalog:",
    "@biomejs/biome": "catalog:",
    "formsnap": "2.0.0-next.1",
    "globals": "^15.0.0",
    "@lucide/svelte": "catalog:",
    "mode-watcher": "^0.4.1",
    "svelte": "catalog:",
    "svelte-check": "catalog:",
    "nanoid": "catalog:",
    "svelte-sonner": "^0.3.28",
    "sveltekit-superforms": "^2.20.0",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "catalog:",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "catalog:",
    "vite": "catalog:",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "arctic": "^2.2.2",
    "googleapis": "^144.0.0",
    "@kokoro/validators": "workspace:*",
    "js-cookie": "^3.0.5",
    "fsevents": "^2.3.3",
    "@sentry/sveltekit": "catalog:"
  },
  "files": ["build"]
}
